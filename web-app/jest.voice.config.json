{
  "displayName": "Voice Assistant Tests",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": [
    "<rootDir>/src/__tests__/setup/voiceTestSetup.js",
    "@testing-library/jest-dom"
  ],
  "testMatch": [
    "<rootDir>/src/__tests__/**/*voice*.test.{js,jsx}",
    "<rootDir>/src/__tests__/**/*Voice*.test.{js,jsx}",
    "<rootDir>/src/__tests__/**/*feedback*.test.{js,jsx}",
    "<rootDir>/src/__tests__/**/*help*.test.{js,jsx}",
    "<rootDir>/src/__tests__/**/*analytics*.test.{js,jsx}"
  ],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@/components/(.*)$": "<rootDir>/src/components/$1",
    "^@/services/(.*)$": "<rootDir>/src/services/$1",
    "^@/utils/(.*)$": "<rootDir>/src/utils/$1",
    "^@/hooks/(.*)$": "<rootDir>/src/hooks/$1",
    "^@/contexts/(.*)$": "<rootDir>/src/contexts/$1",
    "^@/constants/(.*)$": "<rootDir>/src/constants/$1",
    "^@/types/(.*)$": "<rootDir>/src/types/$1",
    "^@i18n/(.*)$": "<rootDir>/src/i18n/$1",
    "\\.(css|less|scss|sass)$": "identity-obj-proxy",
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
  },
  "transform": {
    "^.+\\.(js|jsx|ts|tsx|mjs)$": "<rootDir>/jest-transformer.cjs"
  },
  "extensionsToTreatAsEsm": [".jsx", ".js", ".ts", ".tsx"],
  "collectCoverageFrom": [
    "src/components/voice/**/*.{js,jsx}",
    "src/services/voice*.{js,jsx}",
    "src/services/help*.{js,jsx}",
    "src/services/*feedback*.{js,jsx}",
    "src/services/*analytics*.{js,jsx}",
    "src/hooks/voice*.{js,jsx}",
    "src/utils/voice*.{js,jsx}",
    "src/contexts/voice*.{js,jsx}",
    "!src/**/*.d.ts",
    "!src/**/*.stories.{js,jsx}",
    "!src/**/*.config.{js,jsx}",
    "!src/**/__tests__/**",
    "!src/**/__mocks__/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    },
    "src/components/voice/": {
      "branches": 85,
      "functions": 85,
      "lines": 85,
      "statements": 85
    },
    "src/services/voice*.js": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "coverageReporters": [
    "text",
    "text-summary",
    "html",
    "lcov",
    "json",
    "clover"
  ],
  "coverageDirectory": "<rootDir>/coverage/voice",
  "testTimeout": 10000,
  "verbose": true,
  "detectOpenHandles": true,
  "forceExit": true,
  "clearMocks": true,
  "restoreMocks": true,
  "resetMocks": true,
  "globals": {
    "SpeechRecognition": "readonly",
    "webkitSpeechRecognition": "readonly",
    "SpeechSynthesis": "readonly",
    "speechSynthesis": "readonly"
  },
  "testEnvironmentOptions": {
    "url": "http://localhost:3000"
  },
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "node"
  ],
  "watchPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/build/",
    "<rootDir>/coverage/"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/build/"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!(react-router|@testing-library|react-i18next)/)"
  ],
  "reporters": [
    "default",
    ["jest-html-reporters", {
      "publicPath": "./coverage/voice/html-report",
      "filename": "voice-test-report.html",
      "expand": true,
      "hideIcon": false,
      "pageTitle": "Voice Assistant Test Report"
    }],
    ["jest-junit", {
      "outputDirectory": "./coverage/voice",
      "outputName": "voice-test-results.xml",
      "suiteName": "Voice Assistant Tests",
      "classNameTemplate": "{classname}",
      "titleTemplate": "{title}",
      "ancestorSeparator": " â€º ",
      "usePathForSuiteName": true
    }]
  ],
  "collectCoverageOnlyFrom": {
    "src/components/voice/**/*.{js,jsx}": true,
    "src/services/voice*.{js,jsx}": true,
    "src/services/help*.{js,jsx}": true,
    "src/services/*feedback*.{js,jsx}": true,
    "src/services/*analytics*.{js,jsx}": true
  },
  "maxWorkers": "50%",
  "cache": true,
  "cacheDirectory": "<rootDir>/node_modules/.cache/jest/voice",
  "errorOnDeprecated": true,
  "notify": false,
  "notifyMode": "failure-change",
  "silent": false,
  "bail": false,
  "passWithNoTests": true,
  "logHeapUsage": true,
  "slowTestThreshold": 5,
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "testResultsProcessor": "<rootDir>/src/__tests__/utils/testResultsProcessor.js"
}